{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "sourceMap": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/src/*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "app/src/**/*.ts",
    "app/src/**/*.tsx",
    "app/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
